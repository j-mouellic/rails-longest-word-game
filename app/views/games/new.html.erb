<h1>New Game</h1>

<div class="letter-container">
  <% @letters.each do |letter| %>
    <p class="letter-box"><%= letter %></p>
  <% end %>
</div>

<p>What is the longest word you can find ?</p>

<form id="form" action="/score" method="post" data-turbo="false">
    <input class="text" type="text" name="answer" placeholder="Your word">
    <input class="button" type="submit" value="Play">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
